@model dynamic

<div class="form-group">
    <label class="control-label">@ViewData["Name"]</label>
 
    <select class="form-control" name="@ViewData["Name"]">
        <option value="0"></option>
        @foreach (var item in Model)
        {
            if (ViewData["ID"] != null && (item == ViewData["ID"]))
            {
                <option selected="" value="@item.ID">@item.Name</option>
            }
            else
            {
                <option value="@item.ID">@item.Name</option>
            }



        }
    </select>

 
</div>




 