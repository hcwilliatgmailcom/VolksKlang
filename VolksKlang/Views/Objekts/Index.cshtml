@model IEnumerable<VolksKlang.Models.Objekt>

@{
    ViewData["Title"] = "Index";
}

<h1>Objektliste</h1>

 
<table class="table">
 
    <tbody>
@foreach (var item in Model) {
        <tr>


            <td>
                VK-PR-<span>@item.ID</span>-<span>@(item.Bezeichnung==null?"":item.Bezeichnung.Kuerzel)</span>
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Beschreibung)
            </td>



            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.ID">Bearbeiten</a>
            </td>


        </tr>
}
    </tbody>
</table>
